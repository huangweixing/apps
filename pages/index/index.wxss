/**index.wxss**/
.container {
  margin: 0;
  padding: 0;
  width: 750rpx;
  height: 100%;
}
.header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.header_hd {
  width: 100%;
  height: 300rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding:50rpx 0 50rpx 0;
}
.header_hd view {
  font-size: 40rpx;
}
.header_hd text {
  font-size: 30rpx;
}
.header_img {
  margin-bottom: -10rpx;
}
.customer {
  width: 100%;
  height: 970rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.more {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding:60rpx 0 60rpx 0;
}
.more_hd {
  font-size: 40rpx;
}
.more_ft {
  font-size: 30rpx;
  color: #cfcfcf;
  margin-bottom:80rpx;
}
.customer_collection {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx 0 30rpx;
}
.information {
  width: 100%;
  height: 1510rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.information_hd {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding:60rpx 0 60rpx 0;
}
.hd1 {
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.hd2 {
  font-size: 40rpx;
  margin-bottom: 40rpx;
}
.hd3 {
  font-size: 30rpx;
  color: #cfcfcf;
}
.information_ft {
  width: 100%;
  height: 1120rpx;
}
.scrollX {
  width: 100%;
  height: 100%;
}
.jichu {
  position: relative;
  left: 60rpx;
  bottom: 0;
}
.zixun {
  position:relative;
  right:-600rpx;
  top:-925rpx;
}
.ability {
  width: 100%;
  height: 1970rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.ability_hd {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding:200rpx 0 60rpx 0;
}
.ability_hd view {
  font-size: 40rpx;
  margin-bottom: 50rpx;
}
.ability_hd text {
  font-size: 30rpx;
  color: #cfcfcf;
}
.ability_img{
  width: 100%;
  height: 1500rpx;
}
.ability_img image{
  width: 100%;
  height: 100%;
}
.core {
  width: 100%;
  height: 2530rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 140rpx;
}
.core_hd view{
  font-size: 40rpx;
  margin-top: 170rpx;
}
.core_img {
  width: 100%;
  height: 2220rpx;
}
.core_img image{
  width: 100%;
  height: 100%;
}
.phoneBtn {
  position: fixed;
  right: 0;
  top: 950rpx;
  color: #fff;
  font-size: 30rpx;
   display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 45rpx;
  z-index: 999;
}
.phoneBtn image {
  width: 50rpx;
  height: 50rpx;
}
